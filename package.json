{
  "name": "node-module-boilerplate",
  "version": "0.0.0",
  "scripts": {
    "lint": "npm run lint:tsc && npm run lint:eslint",
    "lint:all": "npm run all -- run lint",
    "lint:tsc": "tsc -p tsconfig.json --noEmit",
    "lint:eslint": "npm run lint:eslint:glob -- '**/*.{js,ts}'",
    "lint:eslint:glob": "eslint --fix --max-warnings 0",
    "test": "jest",
    "test:watch": "npm run test -- '--watch'",
    "reformat": "npm run reformat:glob -- '**/*.{js,json,ts}'",
    "reformat:glob": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@shaharmor/commitlint-config": "0.0.1",
    "@shaharmor/eslint-config": "1.0.9",
    "@shaharmor/prettier-config": "1.0.1",
    "@shaharmor/tsconfig": "0.0.4",
    "@types/jest": "24.0.17",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.3",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "eslint": "6.2.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.15.1",
    "eslint-plugin-prettier": "3.1.0"
  }
}
